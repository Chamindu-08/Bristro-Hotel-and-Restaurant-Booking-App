<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:contentDescription="Back Button" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_person"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!-- User Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jayani navodya"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_gravity="center"
            android:backgroundTint="#3C8761"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Options Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/homeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/field_frame"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Home Icon" />

                <TextView
                    android:id="@+id/homeOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Reservation -->
            <LinearLayout
                android:id="@+id/reservationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/field_frame"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Reservation Icon" />

                <TextView
                    android:id="@+id/reservationOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Orders -->
            <LinearLayout
                android:id="@+id/ordersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/field_frame"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Orders Icon" />

                <TextView
                    android:id="@+id/ordersOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Change Password -->
            <LinearLayout
                android:id="@+id/changePasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/field_frame"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/change_password"
                    android:contentDescription="Change Password Icon" />

                <TextView
                    android:id="@+id/changePasswordOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Privacy Policies -->
            <LinearLayout
                android:id="@+id/privacyPoliciesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/field_frame"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Privacy and Policies Icon" />

                <TextView
                    android:id="@+id/privacyPoliciesOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy and Policies"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- About App -->
            <LinearLayout
                android:id="@+id/aboutAppLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/field_frame"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="About App Icon" />

                <TextView
                    android:id="@+id/aboutAppOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About App"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Help -->
            <LinearLayout
                android:id="@+id/helpLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/field_frame"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Help Us Icon" />

                <TextView
                    android:id="@+id/helpOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help Us"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/logoutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/field_frame"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/log_out"
                    android:contentDescription="Logout Icon" />

                <TextView
                    android:id="@+id/logoutOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:textColor="#0F0E0E" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
